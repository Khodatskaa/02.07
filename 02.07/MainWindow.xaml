<Window x:Class="_02._07.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02._07"
        mc:Ignorable="d"
        Title="Hamlet Downloader" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnDownload" Content="Download Hamlet" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Click="btnDownload_Click"/>
        <TextBox x:Name="txtHamlet" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,10,10" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" IsReadOnly="True" Width="760" Height="350"/>
    </Grid>
</Window>
